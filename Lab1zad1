#include <stdio.h>
#include <math.h>

int main()
{
	int b, q, n;
	int sum;
	printf("Input number b,q,n\n");
	printf("b=");
	scanf("%d",&b);
	printf("q=");
	scanf("%d",&q);
	printf("n=");
	scanf("%d", &n);
	{    
		sum = 1;
		if (q == 1)
		printf("Error, cannot be divided by zero\n");
		else {
			sum = b * (pow(q, n) - 1) / (q - 1);
			printf("%d", sum);
		}

	}
	return 0;
}
